@model CitraDataStore.Models.Admins

@{
    ViewData["Title"] = "Modificar Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h5 class="m-0 font-weight-bold text-primary">Editar información de usuario</h5>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form method="post" asp-action="/Admins/Edit">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nombre completo</label>
                                <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" placeholder="Ingresar nombre completo">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="Ingresar Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="RolesId" class="control-label"></label>
                                @Html.DropDownList("RolesId", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Estaciónes asignadas</label>
                                <input type="text" class="form-control" id="IdEstacionesAsignadas" name="IdEstacionesAsignadas" value="@Model.IdEstacionesAsignadas" placeholder="Ingresar estaciónes a asignar">
                            </div>
                            <div class="form-group">
                                <label>Dias de busqueda</label>
                                <input type="number" class="form-control" id="Dias_disponibles" name="Dias_disponibles" value="@Model.Dias_disponibles" placeholder="Ingresar dias disponibles">
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </form>
                </div>
                    <!-- /.box -->
                
            </div>
        </div>
</section>
